params {
  input = "$launchDir/input/"
  samplesheetFileName = "samplesheet.csv"
  genome = "$launchDir/input/genome.fasta"
  //datasetType = "spliceSites" // [originsOfReplication, spliceSites, chipSeq]
    datasetType = "chipSeq" // [originsOfReplication, spliceSites, chipSeq]
  experimentType = "mnase" // [histonemod, tfbinding, mnase, faire, dnase]
  hasPairedReads = false
  removePCRDuplicates = false
  outputDir = "$launchDir/output"
  saveAlignments = true
  saveCoverage = true
  inputFileType = "fastq"
}


process {

    withName: bowtie2 {
        ext.args = ''
    }


}

docker {
    enabled = true
}
