params {
  bowtieIndex = "$launchDir/data/bowtieIndex"
  mateA = "$launchDir/data/mateA"
  mateB = "$launchDir/data/mateB"
  // Bam output will be sampleName.bam
  sampleName = "sample"
  outputDir = "$launchDir/output"
  // If deleteIntermediateFiles is true, then sam output will not be returned
  deleteIntermediateFiles = "false"
  isColorspace = "false"
  removePCRDuplicates = "false"
  extraBowtieParams = ""
  logFile = "runBowtieMapping.log"
  samFile = "output.sam"
  // If you wish to run single-end functionality, make sure to set isColorspace to true and set mateB path to be the same as mateA.
  singleEnd = "false"
}
process {
  container = 'veupathdb/bowtiemapping:latest'
}
docker {
    enabled = true
}
